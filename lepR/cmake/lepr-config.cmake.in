# lepR CMake config file
#
# This file sets the following variables:
# lepR_FOUND - Always TRUE.
# lepR_INCLUDE_DIRS - Directories containing the lepR include files.
# lepR_IDL_DIRS - Directories containing the lepR IDL files.
# lepR_LIBRARIES - Libraries needed to use lepR.
# lepR_DEFINITIONS - Compiler flags for lepR.
# lepR_VERSION - The version of lepR found.
# lepR_VERSION_MAJOR - The major version of lepR found.
# lepR_VERSION_MINOR - The minor version of lepR found.
# lepR_VERSION_REVISION - The revision version of lepR found.
# lepR_VERSION_CANDIDATE - The candidate version of lepR found.

message(STATUS "Found lepR-@PROJECT_VERSION@")
set(lepR_FOUND TRUE)

find_package(<dependency> REQUIRED)

#set(lepR_INCLUDE_DIRS
#    "@CMAKE_INSTALL_PREFIX@/include/@PROJECT_NAME_LOWER@-@PROJECT_VERSION_MAJOR@"
#    ${<dependency>_INCLUDE_DIRS}
#    )
#
#set(lepR_IDL_DIRS
#    "@CMAKE_INSTALL_PREFIX@/include/@PROJECT_NAME_LOWER@-@PROJECT_VERSION_MAJOR@/idl")
set(lepR_INCLUDE_DIRS
    "@CMAKE_INSTALL_PREFIX@/include/@CPACK_PACKAGE_FILE_NAME@"
    ${<dependency>_INCLUDE_DIRS}
    )
set(lepR_IDL_DIRS
    "@CMAKE_INSTALL_PREFIX@/include/@CPACK_PACKAGE_FILE_NAME@/idl")


if(WIN32)
    set(lepR_LIBRARIES
        "@CMAKE_INSTALL_PREFIX@/@LIB_INSTALL_DIR@/@CMAKE_SHARED_LIBRARY_PREFIX@@PROJECT_NAME_LOWER@@CMAKE_STATIC_LIBRARY_SUFFIX@"
        ${<dependency>_LIBRARIES}
        )
else(WIN32)
    set(lepR_LIBRARIES
        "@CMAKE_INSTALL_PREFIX@/@LIB_INSTALL_DIR@/@CMAKE_SHARED_LIBRARY_PREFIX@@PROJECT_NAME_LOWER@@CMAKE_SHARED_LIBRARY_SUFFIX@"
        ${<dependency>_LIBRARIES}
        )
endif(WIN32)

set(lepR_DEFINITIONS ${<dependency>_DEFINITIONS})

set(lepR_VERSION @PROJECT_VERSION@)
set(lepR_VERSION_MAJOR @PROJECT_VERSION_MAJOR@)
set(lepR_VERSION_MINOR @PROJECT_VERSION_MINOR@)
set(lepR_VERSION_REVISION @PROJECT_VERSION_REVISION@)
set(lepR_VERSION_CANDIDATE @PROJECT_VERSION_CANDIDATE@)

